{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <h1>Catalogue de livres</h1>
        </div>
        <div class="row">
            {% for book in books %}
                <div class="card m-2" style="width: 18rem;">
                    {% if book.filename %}
                        <img class="card-img-top" src="/images/books/{{ book.filename }}" alt="Card image cap">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <p class="card-text">{{ book.author }}</p>
                        <p class="card-text">{{ book.description }}</p>
                        <a href="/book/{id}" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
