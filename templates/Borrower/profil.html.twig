{% extends 'base.html.twig' %}

{% block title %}Votre profil{% endblock %}

{% block body %}
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="mt-3">Votre profil</h1>
            </div>
        </div>
        <section class="profilImg">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <picture>
                        <img class="rounded-circle" src="{{ asset('Images/profil.png') }}" alt="Photo de votre profil">
                    </picture>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 d-flex flex-column align-items-center">
                    <h2>Vos informations personnelles</h2>
                    <ul class="mt-3">
                        <li>Prénom : {{ app.user.firstname }}</li>
                        <li>Nom : {{ app.user.lastname }}</li>
                        <li>mail : {{ app.user.email }}</li>
                        <li>adresse : {{ app.user.address }}</li>
                    </ul>
                </div>
                <div class="col-md-6 d-flex flex-column align-items-center">
                    <h2>Vos réservation en cours</h2>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Handle</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>@fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Larry</td>
                            <td>the Bird</td>
                            <td>@twitter</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
{% endblock %}
