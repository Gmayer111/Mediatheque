{% extends "base.html.twig" %}

{% block body %}

    <div class="container mb-4">
        <h2 class="mb-5 mt-3 text-center">Ajouter un livre</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.title) }}</div>
            <div class="col-md-4">{{ form_row(form.description) }}</div>
            <div class="col-md-4">{{ form_row(form.author) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.publication_date) }}</div>
            <div class="col-md-4">{{ form_row(form.genre) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.catalogue) }}</div>
            <div class="col-md-4">{{ form_row(form.picture) }}</div>
        </div>

        <input type="submit" value="Confirmer" class="btn btn-primary mt-3">
        {{ form_end(form) }}
    </div>

{% endblock %}