{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
    <main class="container mb-4">
        <div class="row">

            <div class="col-4 border-right mt-4">
                <h1 class="text-center mb-4">{{ book.title }}</h1>
                <div class="d-flex justify-content-center">
                    <img class="rounded bookImg" src="/images/books/{{ book.filename }}" alt="Image du livre {{ book.title }}" style="width: 300px; height: 300px;">
                </div>
            </div>

            <div class="col-4 d-flex flex-column justify-content-around border-right mt-4">
                <div class="d-flex justify-content-center mt-3">
                    <ul>
                        <li>Auteur : {{ book.author }}</li>
                        <li>Date de publication : {{ book.publicationDate | date('d-m-y') }}</li>
                        <li>Genre : {{ book.genre }}</li>
                    </ul>
                </div>

                <div class="d-flex justify-content-center">
                    {% if book.availability is same as '1' %}
                    <form action="/update-book/{{ book.id }}/{{ app.user.username }}" onsubmit="return confirm()">
                        <input class="btn btn-primary" id="emprunt" type="submit" value="Emprunter">
                    </form>
                    {% endif %}

                </div>
            </div>

            <div class="col-4 d-flex flex-column justify-content-center">
                <p>Description : {{ book.description }}</p>
            </div>
        </div>
        <script src="{{ asset('js/confirm.js') }}"></script>
    </main>
{% endblock %}
